{
  "apps":
  [{
      "name": "rchrdscope",
      "script": "meteor",
      "watch": ["server", "client"],
      "ignore_watch" : ["node_modules", "public"],
      "watch_options": {
        "usePolling": true
      },
      "error_file" : "./data/logs/server-err.log",
      "out_file"   : "./data/logs/server-out.log",
      "env": {
        "NODE_ENV": "developmnet",
        "WORKER_ID": "0",
        "PORT": "3000",
        "ROOT_URL": "http://rhoyos.com",
        "MONGO_URL": "mongodb://localhost:27017/meteor",
        "MONGO_OPLOG_URL": "mongodb://localhost:27017/local",
        "HTTP_FORWARDED_COUNT": "1",
        "METEOR_SETTINGS": {}
      }
    }
  ]
}